<ivy-module version="1.0">
  <info organisation="omero" module="main" revision="${omero.version}" status="integration"/>
  <configurations>
    <conf name="build"/>
    <conf name="runtime"/>
  </configurations>
  <publications>
    <artifact name="main" type="zip" conf="runtime"/>
  </publications>
  <dependencies>
    <!-- Internal -->
    <dependency name="common" rev="${omero.version}" changing="true"/>
    <dependency name="importer" rev="${omero.version}" changing="true"/>
    <dependency name="romio" rev="${omero.version}" changing="true"/>
    <dependency name="rendering" rev="${omero.version}" changing="true"/>
    <dependency name="blitz" rev="${omero.version}" changing="true" conf="*->server"/>
    <dependency name="server" rev="${omero.version}" changing="true" conf="*->server"/>
    <dependency org="omero-tools" name="omero_client" rev="${omero.version}" changing="true" conf="*->client"/>
    <dependency org="omero-tools" name="OmeroImporter" rev="${omero.version}" changing="true" conf="*->client"/>
    <!-- Ant dependencies for the antlib/resources/omero.ivy build -->
    <dependency org="apache" name="ant-launcher" rev="1.6.5"/>
    <dependency org="apache" name="ant-nodeps" rev="1.6.5"/>
    <dependency org="apache" name="ant" rev="1.6.5"/>
  </dependencies>
</ivy-module>
