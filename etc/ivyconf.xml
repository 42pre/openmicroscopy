<ivyconf>
  <properties file="${ivy.conf.dir}/ivyconf.properties"/>
  <conf defaultCache="${ivy.conf.dir}/ivy-cache" defaultResolver="omero-resolver"/>
  <resolvers>
    <chain name="omero-resolver">
      <filesystem name="repository">
        <artifact pattern="${ivy.conf.dir}/../lib/repository/[organization]/[module]/[revision]/[artifact]-[revision].[type]" />
        <ivy pattern="${ivy.conf.dir}/../lib/repository/[organization]/[module]/[revision]/ivy.xml"/>
      </filesystem>
    </chain>
  </resolvers>
  <ibiblio name="ibiblio-maven2" m2compatible="true" />
  <chain name="local-copy">
    <filesystem name="local-copy">
      <artifact pattern="${basedir}/target/libs/[organization]/[module]/[revision]/[artifact]-[revision].[type]" />
    </filesystem>
  </chain>
</ivyconf>
