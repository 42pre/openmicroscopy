<ivyconf>
	<properties file="${ivy.conf.dir}/ivyconf.properties"/>
	<conf defaultCache="${ivy.conf.dir}/ivy-cache" defaultResolver="libraries"/>
<ivyconf>
  <conf defaultResolver="omero-resolver" />
  <resolvers>
    <chain name="omero-resolver">
      <filesystem name="libraries">
        <artifact pattern="${ivy.conf.dir}/../lib/repository/[organization]/[module]/[revision]/[artifact]-[revision].[type]" />
      </filesystem>
    </chain>
  </resolvers>
</ivyconf>
