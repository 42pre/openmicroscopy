<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <groupId>omero</groupId>
    <artifactId>main</artifactId>
    <version>3.0-alpha-SNAPSHOT</version>
    <relativePath>../../pom.xml</relativePath>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>omero-policy</artifactId>
  <packaging>jar</packaging>
  <name>Omero Coding Policy - Enforced by AspectJ</name>
  <dependencies>
    <!-- ALL other JAR components from Omero -->
    <dependency><groupId>omero</groupId><artifactId>client-ejb</artifactId><version>${version}</version></dependency>
    <dependency><groupId>omero</groupId><artifactId>common</artifactId><version>${version}</version></dependency>
    <dependency><groupId>omero</groupId><artifactId>dsl</artifactId><version>${version}</version></dependency>
    <dependency><groupId>omero</groupId><artifactId>omeio-nio</artifactId><version>${version}</version></dependency>
    <dependency><groupId>omero</groupId><artifactId>omero-ejb</artifactId><version>${version}</version></dependency>
    <dependency><groupId>omero</groupId><artifactId>rendering</artifactId><version>${version}</version></dependency>
    <dependency><groupId>omero</groupId><artifactId>sandbox</artifactId><version>${version}</version></dependency>
    <dependency><groupId>omero</groupId><artifactId>server</artifactId><version>${version}</version></dependency>
<!--<dependency><groupId>omero</groupId><artifactId>shoola-adapter</artifactId><version>${version}</version></dependency>TODO-->
    <dependency>
      <groupId>aspectj</groupId>
      <artifactId>aspectjlib</artifactId>
      <version>1.5.0</version>
    </dependency>
    <dependency>
      <groupId>aspectj</groupId>
      <artifactId>aspectjrt</artifactId>
      <version>1.5.0</version>
    </dependency>
    <dependency>
      <groupId>aspectj</groupId>
      <artifactId>aspectjtools</artifactId>
      <version>1.5.0</version>
    </dependency>
    <dependency>
      <groupId>aspectj</groupId>
      <artifactId>aspectjweaver</artifactId>
      <version>1.5.0</version>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <id>check-policy</id>
            <phase>package</phase>
            <goals><goal>run</goal></goals>
            <configuration>
              <tasks>
                <ant antfile="build.xml" inheritRefs="true"/>
              </tasks>
            </configuration>
          </execution>
        </executions>
        <dependencies>
        </dependencies>
      </plugin>
    </plugins>
  </build>
</project>
