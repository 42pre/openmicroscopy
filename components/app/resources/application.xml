<?xml version="1.0" encoding="UTF-8"?>
<application xmlns="http://java.sun.com/xml/ns/j2ee" version="1.4"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://java.sun.com /xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/application_1_4.xsd">

    <display-name>Omero</display-name>
    <description>Open Microscopy Environment - RemoteObjects Server</description>

    <module>
      <ejb>server.jar</ejb>
    </module>

    <!--
    Removing blitz.jar from the application. This only needs to be
    activated if OMERO.blitz is to run within the application server.
    <module>
      <ejb>blitz.jar</ejb>
    </module>
    -->

    <!-- The services.jar is automatically produced by the apps/
    component build system from the tools/target directory. It is
    necessary to "turn on" the build for particular tools. See
    tools/build.xml for more.  -->

    <module>
      <ejb>services.jar</ejb>
    </module>

    <module>
      <ejb>extensions.jar</ejb>
    </module>

</application>
