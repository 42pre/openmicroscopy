<!--

	IO Service - Berkeley DB Java Edition configuration
 
-->

<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>	

	<bean name="ioStore" class="ome.io.bdb.Datastore" init-method="init" destroy-method="close">
		<constructor-arg value="/tmp/bdb"/>
		<constructor-arg value="MyDB"/>
		<constructor-arg value="true"/>
		<constructor-arg value="false"/>
	</bean>
	
	<bean name="ioService" class="ome.logic.IOImpl">
		<constructor-arg ref="ioStore"/>
	</bean>
 
</beans>
