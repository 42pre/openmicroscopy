<?xml version="1.0" encoding="utf-8"?>
<project name="global" default="help" basedir=".">

	<!-- Imports -->
	<dirname property="import.dir"  file="${ant.file.global}"/>
	<import file="${import.dir}/macros.xml"/>
	<import file="${import.dir}/directories.xml"/>
	<import file="${import.dir}/patterns.xml"/>
	
	<!-- Define properties -->
	<property environment="env" />
	<property file="${hibernate.properties}" />
	
	<target name="help">
		<echo>
			This build file is intended for import only.
		</echo>
	</target>
		
	<target name="prepare">
		<copyResource file="${root.dir}/hibernate.properties"/>
		<definePath/>
		<mkdir dir="${dest.dir}" />
		<mkdir dir="${done.dir}" />
	</target>

	<target name="hibcheck">
		<available property="hibernate" classname="org.hibernate.Hibernate" classpathref="local.classpath" />
		<available property="hibernate-ext" classname="org.hibernate.tool.ant.HibernateToolTask" classpathref="local.classpath" />
	</target>
	
</project>
