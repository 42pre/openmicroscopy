<?xml version="1.0" encoding="utf-8"?>
<project name="global" default="help" basedir=".">

	<!-- Imports -->
	<dirname property="import.dir"  file="${ant.file.global}"/>
	<import file="${import.dir}/macros.xml"/>
	<import file="${import.dir}/directories.xml"/>
	<import file="${import.dir}/patterns.xml"/>
	
	<!-- Define properties -->
	<property environment="env" />
	<property file="${root.dir}/hibernate.properties" />
	
	<target name="help">
		<echo>
			This build file is intended for import only.
		</echo>
	</target>

	<target name="prepare">
		<mkdir dir="${dest.dir}" />
		<mkdir dir="${done.dir}" />
		<mkdir dir="${genresrc.dir}" />
		<copyResource file="${root.dir}/hibernate.properties"/>
		<copyResource file="${root.dir}/log4j.properties"/>
		<copyResource file="${root.dir}/jndi.properties"/>
		<definePath/>
	</target>

	<target name="msg">
		<property file="${import.dir}/messages.properties" />
	</target>

	<target name="generate" depends="prepare,loadGroovy">
                <echo file="${genresrc.dir}/Classpath.sh">
                  export CLASSPATH=${this.path}
                </echo>
		<eclipseClasspath/>
	</target>

	<target name="loadHibernate">
		<available property="hibernate-exists" classname="org.hibernate.Hibernate" classpathref="local.classpath" />
		<available property="hibernate.ext-exists" classname="org.hibernate.tool.ant.HibernateToolTask" classpathref="local.classpath" />
		<fail unless="hibernate-exists" message="Hibernate ${fail.message}"/>
		<fail unless="hibernate.ext-exists" message="Hibernate Tools ${fail.message}"/>
		<taskdef classname="org.hibernate.tool.ant.HibernateToolTask" classpathref="local.classpath" name="hibernatetool"/>
	</target>
	
	<target name="loadGroovy">
		<available property="groovy-exists" classname="org.codehaus.groovy.ant.Groovy" classpathref="local.classpath" />
		<fail unless="groovy-exists" message="Groovy ${fail_message}"/>
		<taskdef classname="org.codehaus.groovy.ant.Groovy" classpathref="local.classpath" name="groovy"/>
	</target>
		
</project>
