<faces-config xmlns="http://java.sun.com/JSF/Configuration">
  <application>
    <message-bundle>ome.admin.bundle.messages</message-bundle>
    <locale-config>
      <default-locale>en</default-locale>
      <supported-locale>pl</supported-locale>
    </locale-config>
  </application>
  <navigation-rule>
    <from-view-id>/groupForm.jsp</from-view-id>
    <navigation-case>
      <from-action>#{IAGManagerBean.addGroup}</from-action>
      <from-outcome>success</from-outcome>
      <to-view-id>/groups.jsp</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-action>#{IAGManagerBean.updateGroup}</from-action>
      <from-outcome>success</from-outcome>
      <to-view-id>/groups.jsp</to-view-id>
    </navigation-case>
  </navigation-rule>
  <navigation-rule>
    <from-view-id>/groups.jsp</from-view-id>
    <navigation-case>
      <from-action>#{IAGManagerBean.editGroup}</from-action>
      <from-outcome>success</from-outcome>
      <to-view-id>/groupForm.jsp</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-action>#{IAGManagerBean.addNewGroup}</from-action>
      <from-outcome>success</from-outcome>
      <to-view-id>/groupForm.jsp</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-action>#{IAGManagerBean.delGroup}</from-action>
      <from-outcome>success</from-outcome>
      <to-view-id>/groups.jsp</to-view-id>
    </navigation-case>
  </navigation-rule>
  
  <navigation-rule>
    <from-view-id>/experimenterForm.jsp</from-view-id>
    <navigation-case>
      <from-action>#{IAEManagerBean.addExperimenter}</from-action>
      <from-outcome>success</from-outcome>
      <to-view-id>/experimenters.jsp</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-action>#{IAEManagerBean.updateExperimenter}</from-action>
      <from-outcome>success</from-outcome>
      <to-view-id>/experimenters.jsp</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-action>#{IAEManagerBean.changePassword}</from-action>
      <from-outcome>success</from-outcome>
      <to-view-id>/password.jsp</to-view-id>
    </navigation-case>
  </navigation-rule>
  
  <navigation-rule>
    <from-view-id>/experimenters.jsp</from-view-id>
    <navigation-case>
      <from-action>#{IAEManagerBean.editExperimenter}</from-action>
      <from-outcome>success</from-outcome>
      <to-view-id>/experimenterForm.jsp</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-action>#{IAEManagerBean.addNewExperimenter}</from-action>
      <from-outcome>success</from-outcome>
      <to-view-id>/experimenterForm.jsp</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-action>#{IAEManagerBean.delExperimenter}</from-action>
      <from-outcome>success</from-outcome>
      <to-view-id>/experimenters.jsp</to-view-id>
    </navigation-case>
  </navigation-rule>

 <navigation-rule> 
    <from-view-id>/main.jsp</from-view-id> 
    <navigation-case>
        <from-action>#{MyLoginBean.login}</from-action>
        <from-outcome>success</from-outcome> 
        <to-view-id>/main.jsp</to-view-id> 
    </navigation-case> 
     <navigation-case> 
         <from-action>#{MyLoginBean.login}</from-action>
         <from-outcome>false</from-outcome> 
         <to-view-id>/main.jsp</to-view-id> 
     </navigation-case> 
 </navigation-rule>

 <navigation-rule> 
    <from-view-id>/main.jsp</from-view-id> 
    <navigation-case>
        <from-action>#{IAMAManagerBean.updateExperimenter}</from-action>
        <from-outcome>success</from-outcome> 
        <to-view-id>/main.jsp</to-view-id> 
    </navigation-case> 
    <navigation-case>
        <from-action>#{IAMAManagerBean.updateMyPassword}</from-action>
        <from-outcome>success</from-outcome> 
        <to-view-id>/main.jsp</to-view-id> 
    </navigation-case> 
 </navigation-rule>

 <navigation-rule> 
    <from-view-id>/password.jsp</from-view-id> 
    <navigation-case>
        <from-action>#{IAEManagerBean.updatePassword}</from-action>
        <from-outcome>success</from-outcome> 
        <to-view-id>/experimenters.jsp</to-view-id> 
    </navigation-case> 
</navigation-rule>

  <managed-bean>
    <description>
      The "backing file" bean that backs up the application
    </description>
    <managed-bean-name>IAGManagerBean</managed-bean-name>
    <managed-bean-class>ome.admin.controller.IAdminGroupController</managed-bean-class>
    <managed-bean-scope>session</managed-bean-scope>
  </managed-bean>
  
  <managed-bean>
    <description>
      The "backing file" bean that backs up the application
    </description>
    <managed-bean-name>IAEManagerBean</managed-bean-name>
    <managed-bean-class>ome.admin.controller.IAdminExperimenterController</managed-bean-class>
    <managed-bean-scope>session</managed-bean-scope>
  </managed-bean>

  <managed-bean>
    <description>
      The "backing file" bean that backs up the application
    </description>
    <managed-bean-name>IAMAManagerBean</managed-bean-name>
    <managed-bean-class>ome.admin.controller.IAdminMyAccountController</managed-bean-class>
    <managed-bean-scope>session</managed-bean-scope>
  </managed-bean>  

   <managed-bean> 
        <description>Login Bean Holder</description> 
        <managed-bean-name>LoginBean</managed-bean-name> 
        <managed-bean-class>ome.admin.controller.LoginBean</managed-bean-class> 
        <managed-bean-scope>session</managed-bean-scope> 
   </managed-bean>
    
</faces-config>
