<faces-config xmlns="http://java.sun.com/JSF/Configuration">


	<!-- Bundle messages -->
	<application>
		<message-bundle>ome.admin.bundle.messages</message-bundle>
		<locale-config>
			<default-locale>en</default-locale>
			<supported-locale>pl</supported-locale>
		</locale-config>
	</application>
	
	
	<render-kit>
		<render-kit-id>HTML_BASIC</render-kit-id>
		<renderer>
			<component-family>javax.faces.Command</component-family>
			<renderer-type>javax.faces.Button</renderer-type>
			<renderer-class>
				org.apache.myfaces.renderkit.html.jsf.ExtendedHtmlButtonRenderer
			</renderer-class>
		</renderer>

		<renderer>
			<component-family>javax.faces.Command</component-family>
			<renderer-type>javax.faces.Link</renderer-type>
			<renderer-class>
				org.apache.myfaces.renderkit.html.jsf.ExtendedHtmlLinkRenderer
			</renderer-class>
		</renderer>
	</render-kit>

	<converter>
		<converter-id>SubstringConverter</converter-id>
		<converter-class>
			ome.admin.converter.SubstringConverter
		</converter-class>
	</converter>

	<!-- uploadFile.jsp navigation -->
	<navigation-rule>
		<from-view-id>/uploadFile.jsp</from-view-id>
		<navigation-case>
			<from-action>#{UploadBean.uploadFile}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/imports.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>

	<!-- imports.jsp navigation -->
	<navigation-rule>
		<from-view-id>/imports.jsp</from-view-id>
		<navigation-case>
			<from-action>#{TreeBean.selectedNode}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/importForm.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>

	<!-- importForm.jsp navigation -->
	<navigation-rule>
		<from-view-id>/importForm.jsp</from-view-id>
		<navigation-case>
			<from-action>#{TreeBean.saveItems}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/imports.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>

	<!-- groupForm.jsp navigation -->
	<navigation-rule>
		<from-view-id>/groupForm.jsp</from-view-id>
		<navigation-case>
			<from-action>#{IAGManagerBean.addGroup}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/groups.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{IAGManagerBean.updateGroup}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/groups.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>

	<!-- groups.jsp navigation -->
	<navigation-rule>
		<from-view-id>/groups.jsp</from-view-id>
		<navigation-case>
			<from-action>#{IAGManagerBean.editGroup}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/groupForm.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{IAGManagerBean.addNewGroup}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/groupForm.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{IAGManagerBean.delGroup}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/groups.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{IAGManagerBean.editInGroup}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/editInGroup.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>

	<!-- editInGroup.jsp navigation -->
	<navigation-rule>
		<from-view-id>/editInGroup.jsp</from-view-id>
		<navigation-case>
			<from-action>#{IAGManagerBean.saveInToGroup}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/groups.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{IAGManagerBean.saveInToGroup}</from-action>
			<from-outcome>false</from-outcome>
			<to-view-id>/editInGroup.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>

	<!-- experimenterForm.jsp navigation -->
	<navigation-rule>
		<from-view-id>/experimenterForm.jsp</from-view-id>
		<navigation-case>
			<from-action>#{IAEManagerBean.addExperimenter}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/experimenters.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>
				#{IAEManagerBean.updateExperimenter}
			</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/experimenters.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{IAEManagerBean.changePassword}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/password.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>

	<!-- experimenters.jsp navigation -->
	<navigation-rule>
		<from-view-id>/experimenters.jsp</from-view-id>
		<navigation-case>
			<from-action>
				#{IAEManagerBean.editExperimenter}
			</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/experimenterForm.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>
				#{IAEManagerBean.addNewExperimenter}
			</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/experimenterForm.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{IAEManagerBean.delExperimenter}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/experimenters.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>

	<!-- login.jsp navigation -->
	<navigation-rule>
		<from-view-id>/login.jsp</from-view-id>
		<navigation-case>
			<from-action>#{LoginBean.login}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/experimenters.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{LoginBean.login}</from-action>
			<from-outcome>false</from-outcome>
			<to-view-id>/login.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{LoginBean.login}</from-action>
			<from-outcome>account</from-outcome>
			<to-view-id>/myAccount.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>

	<!-- myAccount.jsp navigation -->
	<navigation-rule>
		<from-view-id>/myAccount.jsp</from-view-id>
		<navigation-case>
			<from-action>
				#{IAMAManagerBean.updateExperimenter}
			</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/myAccount.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>
				#{IAMAManagerBean.changeMyPassword}
			</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/myPassword.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>

	<!-- password.jsp navigation -->
	<navigation-rule>
		<from-view-id>/password.jsp</from-view-id>
		<navigation-case>
			<from-action>#{IAEManagerBean.updatePassword}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/experimenters.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>

	<!-- myPassword.jsp navigation -->
	<navigation-rule>
		<from-view-id>/myPassword.jsp</from-view-id>
		<navigation-case>
			<from-action>
				#{IAMAManagerBean.updateMyPassword}
			</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/myAccount.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>
				#{IAMAManagerBean.updateMyPassword}
			</from-action>
			<from-outcome>false</from-outcome>
			<to-view-id>/myPassword.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>

	<!-- IAGManagerBean -->
	<managed-bean>
		<description>
			The "backing file" bean that backs up the application
		</description>
		<managed-bean-name>IAGManagerBean</managed-bean-name>
		<managed-bean-class>
			ome.admin.controller.IAdminGroupController
		</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>

	<!-- IAEManagerBean -->
	<managed-bean>
		<description>
			The "backing file" bean that backs up the application
		</description>
		<managed-bean-name>IAEManagerBean</managed-bean-name>
		<managed-bean-class>
			ome.admin.controller.IAdminExperimenterController
		</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>

	<!-- IAMAManagerBean -->
	<managed-bean>
		<description>
			The "backing file" bean that backs up the application
		</description>
		<managed-bean-name>IAMAManagerBean</managed-bean-name>
		<managed-bean-class>
			ome.admin.controller.IAdminMyAccountController
		</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>

	<!-- LoginBean -->
	<managed-bean>
		<description>Login Bean Holder</description>
		<managed-bean-name>LoginBean</managed-bean-name>
		<managed-bean-class>
			ome.admin.controller.LoginBean
		</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>

	<!-- IRIPieChartBean -->
	<managed-bean>
		<managed-bean-name>IRIPieChartBean</managed-bean-name>
		<managed-bean-class>
			ome.admin.controller.IRepositoryInfoPieChartController
		</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>

	<!-- UploadBean -->
	<managed-bean>
		<managed-bean-name>UploadBean</managed-bean-name>
		<managed-bean-class>
			ome.admin.controller.UploadController
		</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>

	<!-- ImportConntroller -->
	<managed-bean>
		<managed-bean-name>TreeBean</managed-bean-name>
		<managed-bean-class>
			ome.admin.controller.ImportController
		</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>

</faces-config>
