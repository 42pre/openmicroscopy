    <description>
        Shared resources for tool builds.
    </description>
    <macrodef name="get-source">
        <attribute name="todir"/>
        <element   name="filesets" implicit="true"/>
        <sequential>
        <copy todir="@{todir}">
            <fileset dir="../../blitz/resources" includes="**/*.ice"/>
            <fileset dir="../../blitz/target/generated/resources" includes="**/*.ice"/>
            <filesets/>
        </copy>
        </sequential>
    </macrodef>
</project>
