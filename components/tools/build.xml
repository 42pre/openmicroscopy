<?xml version="1.0" encoding="utf-8"?>
<project name="tools" default="install" basedir=".">

   <dirname property="up-one" file="${basedir}"/>
   <import file="${up-one}/antlib/resources/global.xml"/>
   
	<target name="help">
		<echo>
			The tools/ directory is a special repository
			for loosely coupled OMERO components.
		</echo>
	</target>

	<!-- This property determines which tools will have their
	build file called. To use:

	  java omero -Dtools=licences,admin TARGET

	-->
	<property name="tools" value=""/>

	<macrodef name="callTools">
	  <sequential/>	  
	</macrodef>

	<target name="parsetools">

	</target>

	<target name="prepare" depends="parsetools"/>

	<target name="generate"/>

	<target name="compile"/>

	<target name="testng-init"/> 

	<target name="test"/>
		
	<target name="junittest"/>
		
	<target name="package"/>

	<target name="install">
	  	<ant dir="${basedir}/licenses" inheritAll="false" inheritRefs="false">
			<property name="current.component" value="tools/licenses"/>
			<target name="install"/>
		</ant>
	</target>

	<target name="integration"/>

	<target name="clean">
	        <delete dir="${tools.dest}"/>
	  	<ant dir="${basedir}/licenses" inheritAll="false" inheritRefs="false">
			<property name="current.component" value="tools/licenses"/>
			<target name="clean"/>
		</ant>
	</target>

</project>
