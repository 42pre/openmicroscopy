<?xml version="1.0" encoding="utf-8"?>
<project name="python" default="install" basedir=".">

    <echo>Entering ${basedir}...</echo>

    <property name="env.DESTDIR"    value="${up-two}/target/"/>
    <property name="env.ICE_CONFIG" value="${basedir}/../../../etc/ice.config"/>

    <defineVariables/>

    <target name="test-compile" description="Dummy target for python since no compile needed"/>

    <macrodef name="setup_py">
        <attribute name="failonerror" default="true"/>
        <element name="args" implicit="true"/>
        <sequential>
            <copy todir="${basedir}">
               <fileset dir="${omero.home}/lib/repository" includes="setuptools*"/>
            </copy>
            <exec executable="${basedir}/setup.py" failonerror="@{failonerror}">
                <args/>
            </exec>
        </sequential>
    </macrodef>

    <target name="python-build" unless="env.NOPYTHON">
        <mkdir dir="${basedir}/build/lib"/>
        <setup_py>
            <arg value="build"/>
        </setup_py>
        <delete>
            <fileset dir="${basedir}" includes="dist/**/*"/>
        </delete>
        <setup_py>
            <arg value="bdist_egg"/>
        </setup_py>
    </target>

    <target name="python-test" unless="env.NOPYTHON">
        <setup_py failonerror="false">
            <arg value="test"/>
        </setup_py>
    </target>

    <target name="python-integration" unless="env.NOPYTHON">
        <setup_py failonerror="false">
            <env key="ICE_CONFIG" value="${env.ICE_CONFIG}"/>
            <arg value="test"/>
            <arg value="-s"/>
            <arg value="test.integration.suite"/>
        </setup_py>
    </target>

    <target name="python-install" unless="env.NOPYTHON">
        <copy todir="../target">
            <fileset dir="${basedir}/build" includes="**/*" excludes="bdist*"/>
        </copy>
        <copy todir="../target/client">
            <fileset dir="${basedir}/dist" includes="**/*"/>
        </copy>
    </target>

    <target name="python-clean" unless="env.NOPYTHON">
        <setup_py>
            <arg value="clean"/>
        </setup_py>
        <delete dir="${basedir}/build"/>
        <delete dir="${basedir}/dist"/>
        <delete file="${basedir}/ez_setup.pyc"/>
        <delete>
            <fileset dir="${basedir}" includes="setuptools*egg"/>
        </delete>
    </target>

    <target name="findbugs">
        <echo>Not yet implemented</echo>
    </target>

</project>
