<?xml version="1.0" encoding="utf-8"?>
<project name="python" default="install" basedir=".">

    <property name="env.DESTDIR"    value="${up-two}/target/"/>
    <property name="env.ICE_CONFIG" value="${basedir}/../../blitz/target/generated/resources/local.properties"/>

    <defineVariables/>
    <condition property="env.NOPYTHON"><isset property="skip.ice"/></condition>

    <macrodef name="setup_py">
        <element name="args" implicit="true"/>
        <sequential>
            <exec executable="${basedir}/setup.py" failonerror="true">
                <args/>
            </exec>
        </sequential>
    </macrodef>

    <macrodef name="slice_py">
        <attribute name="prefix"/>
        <attribute name="todir"/>
        <attribute name="include" default="@{todir}"/>
        <element name="files" implicit="true"/>
        <sequential>
            <apply executable="slice2py" failonerror="true"><!-- parallel="true" -->
                <arg value="--no-package"/>
                <arg value="--output-dir"/>
                <arg value="@{todir}"/>
                <arg value="--prefix"/>
                <arg value="@{prefix}"/>
                <arg value="-I@{include}"/>
                <arg value="-I${ice.home}/slice"/>
                <files/>
            </apply>
        </sequential>
    </macrodef>

    <target name="python-build" unless="env.NOPYTHON">
        <mkdir dir="${basedir}/build/lib"/>
        <setup_py>
            <arg value="build"/>
        </setup_py>
        <delete>
            <fileset dir="${basedir}/dist" includes="**/*"/>
        </delete>
        <setup_py>
            <arg value="bdist_egg"/>
        </setup_py>
    </target>

    <target name="python-test" unless="env.NOPYTHON">
        <setup_py>
            <arg value="test"/>
        </setup_py>
    </target>

    <target name="python-integration" unless="env.NOPYTHON">
        <setup_py>
            <env key="ICE_CONFIG" value="${env.ICE_CONFIG}"/>
            <arg value="test"/>
            <arg value="-s"/>
            <arg value="test.integration.suite"/>
        </setup_py>
    </target>

    <target name="python-install" unless="env.NOPYTHON">
        <copy todir="../target">
            <fileset dir="${basedir}/build" includes="**/*"/>
        </copy>
        <copy todir="../target/client">
            <fileset dir="${basedir}/dist" includes="**/*"/>
        </copy>
    </target>

    <target name="python-clean" unless="env.NOPYTHON">
        <setup_py>
            <arg value="clean"/>
        </setup_py>
        <delete dir="${basedir}/build"/>
        <delete dir="${basedir}/ez_setup.pyc"/>
    </target>

    <target name="findbugs">
        <echo>Not yet implemented</echo>
    </target>

</project>
