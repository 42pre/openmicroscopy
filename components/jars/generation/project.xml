<?xml version="1.0" encoding="UTF-8"?>
<project>
  <extend>../../../project.xml</extend>
  <pomVersion>3</pomVersion>
  <repository/>
  <id>${pom.groupId}-gen</id>
  <name>OME OWL--&gt;Code Generation Library</name>
  <currentVersion>1.0</currentVersion>
  <package>org.ome.generation</package>
  <description>Code to generate source code from OWL</description>
  <dependencies>
    <dependency>
      <groupId>ant</groupId>
      <artifactId>ant</artifactId>
      <version>1.6.2</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>
    </dependency>
    <dependency>
      <groupId>velocity</groupId>
      <artifactId>velocity</artifactId>
      <version>1.3</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>
    </dependency>
    <!--TODO cc needed? -->
    <dependency>
      <groupId>commons-collections</groupId>
      <artifactId>commons-collections</artifactId>
      <version>3.1</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>
    </dependency>
    <!-- JENA REQUIREMENTS -->
    <dependency>
      <groupId>ome-jena</groupId>
      <artifactId>commons-logging</artifactId>
      <version>ome</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>
    </dependency>
    <dependency>
      <groupId>ome-jena</groupId>
      <artifactId>antlr</artifactId>
      <version>ome</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>
    </dependency>
    <dependency>
      <groupId>ome-jena</groupId>
      <artifactId>concurrent</artifactId>
      <version>ome</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>
    </dependency>
    <dependency>
      <groupId>ome-jena</groupId>
      <artifactId>icu4j</artifactId>
      <version>ome</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>
    </dependency>
    <dependency>
      <groupId>ome-jena</groupId>
      <artifactId>jakarta-oro</artifactId>
      <version>2.0.5</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>
    </dependency>
    <dependency>
      <groupId>ome-jena</groupId>
      <artifactId>jena</artifactId>
      <version>ome</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>
    </dependency>
    <dependency>
      <groupId>ome-jena</groupId>
      <artifactId>junit</artifactId>
      <version>ome</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>
    </dependency>
    <dependency>
      <groupId>ome-jena</groupId>
      <artifactId>log4j</artifactId>
      <version>1.2.7</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>
    </dependency>
    <dependency>
      <groupId>ome-jena</groupId>
      <artifactId>xercesImpl</artifactId>
      <version>ome</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>
    </dependency>
    <dependency>
      <groupId>ome-jena</groupId>
      <artifactId>xml-apis</artifactId>
      <version>ome</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>
    </dependency>
  </dependencies>
  <build>
    <sourceDirectory>src/java</sourceDirectory>
    <unitTestSourceDirectory>src/test</unitTestSourceDirectory>
    <unitTest>
      <includes>
        <include>**/*Test.java</include>
      </includes>
      <excludes>
        <exclude>**/NaughtyTest.java</exclude>
      </excludes>
    </unitTest>
    <resources>
      <resource>
        <directory>src/conf</directory>
        <includes>
          <include>*.owl</include>
          <include>*.properties</include>
        </includes>
        <filtering>false</filtering>
      </resource>
      <resource>
        <directory>src/templates</directory>
        <filtering>false</filtering>
      </resource>
    </resources>
  </build>
</project>

