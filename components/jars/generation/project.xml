<?xml version="1.0" encoding="UTF-8"?>

<project>
  <extend>../../../project.xml</extend>
  <pomVersion>3</pomVersion>
  <id>gen</id>
  <name>OME OWL-->Code Generation Library</name>
  <currentVersion>1.0</currentVersion>
  <package>org.ome.generation</package>
  <description>Code to generate source code from OWL</description>
  <dependencies>
    
    <!-- JENA REQUIREMENTS -->

     <dependency>
      <groupId>ome-jena</groupId>
      <artifactId>commons-logging</artifactId>
      <version>ome</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>
    </dependency>
    
     <dependency>
      <groupId>ome-jena</groupId>
      <artifactId>antlr</artifactId>
      <version>ome</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>
    </dependency>

     <dependency>
      <groupId>ome-jena</groupId>
      <artifactId>concurrent</artifactId>
      <version>ome</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>
    </dependency>

     <dependency>
      <groupId>ome-jena</groupId>
      <artifactId>icu4j</artifactId>
      <version>ome</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>
    </dependency>


     <dependency>
      <groupId>ome-jena</groupId>
      <artifactId>jakarta-oro</artifactId>
      <version>2.0.5</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>
    </dependency>

     <dependency>
      <groupId>ome-jena</groupId>
      <artifactId>jena</artifactId>
      <version>ome</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>
    </dependency>

     <dependency>
      <groupId>ome-jena</groupId>
      <artifactId>junit</artifactId>
      <version>ome</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>
    </dependency>

     <dependency>
      <groupId>ome-jena</groupId>
      <artifactId>log4j</artifactId>
      <version>1.2.7</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>
    </dependency>

     <dependency>
      <groupId>ome-jena</groupId>
      <artifactId>xercesImpl</artifactId>
      <version>ome</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>
    </dependency>

     <dependency>
      <groupId>ome-jena</groupId>
      <artifactId>xml-apis</artifactId>
      <version>ome</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>
    </dependency>

  </dependencies>

  <build>
    <sourceDirectory>src/java</sourceDirectory>
    <unitTestSourceDirectory>src/test</unitTestSourceDirectory>
    <unitTest>
      <includes>
        <include>**/*Test.java</include>
      </includes>
      <excludes>
        <exclude>**/NaughtyTest.java</exclude>
      </excludes>
    </unitTest>
    <resources>
      <resource>
        <directory>src/conf</directory>
        <includes>
          <include>*.properties</include>
        </includes>
      </resource>
    </resources>
  </build>
</project>
