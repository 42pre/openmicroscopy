<project name="OWL2JAVAGenerator" default="generate">

  <!-- INHERITED FROM CALLING MAVEN.XML 
  <property name="outputDir" location="${basedir}/src/generated/org/ome/texen"/>
  <property name="tmplDir" location=""/>
  <property name="ontology" location=""/>
  classpath defined externally as well
    <classpath>
      <pathelement location="${tmplir}/"/>
      <fileset dir="${tmplDir}/lib">
        <include name="**/*.jar"/>
      </fileset>
    </classpath>
  -->
  <taskdef 
        name="texen" 
        classname="org.ome.gen.TexenTask">
  </taskdef>

  <!-- ================================================================ -->
  <!-- G E N E R A T E  O W L  B I N D I N G S                          -->
  <!-- ================================================================ -->
  <!-- This target will generate a set of Java classes based on         -->
  <!-- the information in our control context (the OWL Db).             -->
  <!-- ================================================================ -->

  <!-- needs jena libs, commons collections, velocity.jar and our teask -->

  <target name="generate">

    <echo message="+------------------------------------------+"/>
    <echo message="|                                          |"/>
    <echo message="| Generating OWL Bindings!                 |"/>
    <echo message="|                                          |"/>
    <echo message="+------------------------------------------+"/>

    <delete dir="${outputDir}"/>

    <mkdir dir="${outputDir}"/>
    <!-- TODO these could be omitted -->
    <mkdir dir="${outputDir}/model"/>
    <mkdir dir="${outputDir}/xsd"/>

    <texen
      controlTemplate="Control.vm"
      outputDirectory="${outputDir}"
      outputFile="generation.log"
      ontology = "${ontology}"
      templatePath="${tmplDir}"
    />

  </target>

</project>
